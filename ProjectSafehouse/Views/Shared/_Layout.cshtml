<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    @{
      string CurrentTheme = "base";   
    }

    <link rel="stylesheet" type="text/css" href="/Content/themes/base/Shared/_Layout.css" />

    <style>

       html {
        background: url('@string.Format("Content/themes/{0}/images/{1}", CurrentTheme, "Overlay.png")') top center repeat-y, url('@string.Format("Content/themes/{0}/images/{1}", CurrentTheme, "Background.png")') top left repeat;
        }

    </style>

    <script src="Scripts/jquery-1.9.0.min.js"></script>
	<script src="Scripts/Shared/_Layout.js"></script>
    <script src="Scripts/safehouse.Namespacing.js"></script>
	
	<link href='http://fonts.googleapis.com/css?family=Cabin+Condensed:400,600' rel='stylesheet' type='text/css'>

    @RenderSection("Head", required: false)

</head>
<body>
    <div id="mainMenu">
		<div class="NavOption NavLink NavHome">
			<img src="@string.Format("Content\\themes\\{0}\\images\\{1}", CurrentTheme, "home_goldenrod.png")"/><a href="">Project Safehouse</a>
		</div> 
        @RenderSection("MenuOptions", required: false)
    </div>
	<div id="subMenu">
        @RenderSection("SubMenuOptions", required: false)
    </div>

    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <div id="footer">
        @RenderSection("footer", required: false)
    </div>
</body>
</html>
